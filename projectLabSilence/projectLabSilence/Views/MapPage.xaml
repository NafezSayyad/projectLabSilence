<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:vm="clr-namespace:projectLabSilence.ViewModels;assembly=projectLabSilence"
             x:Class="projectLabSilence.Views.MapPage"
             Title="MapPage">

    <ContentPage.BindingContext>
        <vm:MapPageViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SearchBar Grid.Row="0"
                   Placeholder="Enter a location"
                   SearchCommand="{Binding PerformSearch}"
                   VerticalOptions="Start"/>

        <maps:Map x:Name="map" Grid.Row="1"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand"/>
                  
        <Slider Grid.Row="1" Minimum="100" Maximum="10000"
                Value="{Binding CircleRadius, Mode=TwoWay}"
                VerticalOptions="End"/>
    </Grid>
    
</ContentPage>
